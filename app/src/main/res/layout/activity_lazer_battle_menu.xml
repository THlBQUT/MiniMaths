<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lazerbattle.LazerBattleMenu"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

  <Button
      android:id="@+id/lazerBattle_Facile"
      android:layout_width="207dp"
      android:layout_height="75dp"
      android:layout_marginTop="140dp"
      android:onClick="goOnEasy"
      android:text="Facile"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/lazerBattle_moyen"
      android:layout_width="207dp"
      android:layout_height="75dp"
      android:layout_marginBottom="72dp"
      android:onClick="goOnMedium"
      android:text="Moyen"
      app:layout_constraintBottom_toTopOf="@+id/button7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.485"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lazerBattle_Facile"
      app:layout_constraintVertical_bias="1.0" />

  <Button
      android:id="@+id/button7"
      android:layout_width="204dp"
      android:layout_height="79dp"
      android:layout_marginBottom="224dp"
      android:onClick="goOnHard"
      android:text="Difficile"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>