<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".lazerbattle.LazerBattleMenu">

  <androidx.cardview.widget.CardView
      android:id="@+id/header_lazermenu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:background="@color/header_background_color"
      app:cardBackgroundColor="@color/header_background_color"
      app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="6dp">

      <ImageButton
          android:id="@+id/settings_button_return"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_gravity="center_vertical"
          android:background="@android:color/transparent"
          android:translationX="5dp"
          android:onClick="backButton"
          app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_margin="4dp"
          android:layout_weight="1"
          android:text="Lazer Battle"
          android:textColor="@color/text_main_color"
          android:textSize="19sp"
          android:textStyle="bold" />

      <ImageButton
          android:id="@+id/main_home_button"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_vertical"
          android:layout_marginHorizontal="6dp"
          android:layout_marginVertical="4dp"
          android:onClick="goToHome"
          android:background="@android:color/transparent"
          android:padding="8dp"
          android:scaleX="1.2"
          android:scaleY="1.2"
          app:srcCompat="@drawable/ic_baseline_home_24" />

      <ImageButton
          android:id="@+id/main_rank_button"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_vertical"
          android:layout_marginHorizontal="6dp"
          android:layout_marginVertical="4dp"
          android:onClick="goToRanking"
          android:background="@android:color/transparent"
          android:padding="4dp"
          android:scaleX="1.2"
          android:scaleY="1.2"
          app:srcCompat="@drawable/ic_baseline_auto_graph_24" />

      <ImageButton
          android:id="@+id/main_settings_button"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_vertical"
          android:layout_marginHorizontal="6dp"
          android:layout_marginVertical="4dp"
          android:background="@android:color/transparent"
          android:onClick="goToSettings"
          android:padding="4dp"
          android:scaleX="1.2"
          android:scaleY="1.2"
          app:srcCompat="@drawable/ic_baseline_settings_24" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

      <TextView
          android:id="@+id/textView8"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="20dp"
          android:text="Sélectionnez une difficulté"
          android:textColor="@color/black"
          android:textSize="18dp"
          android:textStyle="bold" />

      <RelativeLayout
          android:id="@+id/lazer_facile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginVertical="20dp">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/facile_button"
            android:elevation="1dp"
            android:onClick="goOnEasy"
            android:text="Facile" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/header_background_color"
            app:cardBackgroundColor="@color/header_background_color"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView10"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Meilleur score : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_meilleurScore_facile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de parties : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbParties_facile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView15"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de victoires : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbVictoires_facile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/lazer_moyen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginVertical="20dp">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/moyen_button"
            android:elevation="1dp"
            android:onClick="goOnMedium"
            android:text="Moyen" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/header_background_color"
            app:cardBackgroundColor="@color/header_background_color"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Meilleur score : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_meilleurScore_moyen"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de parties : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbParties_moyen"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de victoires : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbVictoires_moyen"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/lazer_difficile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginVertical="20dp">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/difficile_button"
            android:elevation="1dp"
            android:onClick="goOnHard"
            android:text="Difficile" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/header_background_color"
            app:cardBackgroundColor="@color/header_background_color"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView20"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Meilleur score : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_meilleurScore_difficile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView24"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de parties : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbParties_difficile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView25"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de victoires : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbVictoires_difficile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/lazer_auto"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginVertical="20dp">

        <ImageButton
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/auto_button"
            android:elevation="1dp"
            android:onClick="goOnEvolutive"
            android:text="Evolutive" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/header_background_color"
            app:cardBackgroundColor="@color/header_background_color"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="10dp"
              android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView28"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Meilleur score : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_meilleurScore_auto"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView27"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de parties : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbParties_auto"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

              <TextView
                  android:id="@+id/textView26"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Nombre de victoires : "
                  android:textColor="@color/black"
                  android:textSize="15sp" />

              <TextView
                  android:id="@+id/lazer_nbVictoires_auto"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="0"
                  android:textColor="@color/black"
                  android:textSize="16sp" />
            </LinearLayout>
          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </RelativeLayout>

    </LinearLayout>
  </ScrollView>

</LinearLayout>
