<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiniMaths" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_orange_light</item>
        <item name="colorPrimaryVariant">@color/accent_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name = "android:windowActionBar">false</item>
        <item name="colorSecondary">@android:color/holo_orange_light</item>
        <item name="colorSecondaryVariant">@android:color/holo_orange_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Quizz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#949494</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name = "android:windowActionBar">false</item>
        <item name="colorSecondary">#949494</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="False" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#9F3232</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">#9F3232</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@android:color/holo_orange_dark</item>
    </style>
</resources>